create table dept1(deptno number(2),salary number(10));

SQL> select * from dept1;

    DEPTNO     SALARY
---------- ----------
        10      12943
        20      56742
        30      76642
        20       4634
        40       8734
        20      87234

6 rows selected.

create or replace 
function dept_sal(dept_no in number) return as
	sal dept1.salary%type;
begin
	select tot_sal into sal from dept1 where deptno=dept_no group by deptno;
	return sal;
end;

declare 
	dept_no dept1.deptno%type:=&Dept_no;
	tot_sal dept1.salary%type;
begin
	tot_sal=dept_sal(dept_no);
	dbms_output.put_line('The total salary for department number '||dept_no||' = '||tot_sal);
end;
